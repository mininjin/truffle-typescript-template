{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "types": [
      "@types/node",
      "@types/chai",
      "@types/mocha"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "./build/"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "client"
  ]
}